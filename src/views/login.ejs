<% var title, error %>
<%- include("partials/header") %>

    <div class="container d-flex flex-column vh-100 w-100 align-items-center justify-content-center">
       <% if (error) { %>
         <div class="alert alert-danger w-50">
              <%= error %>
           </div>
       <% } %>
        <form action="/users/login" method="post" class="w-50">
            <h3 class="text-center">LOGIN</h3>
            <br>
            <hr>
            
              <div class="form-floating mb-3">
                <input name="login" type="text" class="form-control" id="floatingPassword" placeholder="Username">
                <label for="floatingPassword">Login</label>
              </div>
              <div class="form-floating mb-3">
                <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
              </div>
              <button class="btn btn-primary w-100" type="submit">Login</button>
        </form>
    </div>
<%- include("partials/footer") %>